<p id="notice"><%= notice %></p>

<h1>Care Packages</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @care_packages.each do |care_package| %>
      <tr>
        <td><%= care_package.title %></td>
        <td><%= care_package.price %></td>
        <td><%= link_to 'Show', care_package %></td>
        <td><%= link_to 'Edit', edit_care_package_path(care_package) %></td>
        <td><%= link_to 'Destroy', care_package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Care Package', new_care_package_path %>
